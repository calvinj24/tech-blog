<div class="row h-100 login-row">
  <div class="col login-column">
    <div class="container">
      <h3 class="mt-4 pb-3 border-bottom">Log In</h3>
      <form class="login-form form-group mt-3">
        <label for="email-login">email:</label>
        <input type="text" id="email-login" class="form-control"/>
        <label for="password-login">password:</label>
        <input type="password" id="password-login" class="form-control"/>
        <button type="submit" class="btn btn-secondary mt-2">login</button>
      </form>
    </div>
  </div>
  <div class="col login-column">
    <div class="container">
      <h3 class="mt-4 pb-3 border-bottom">Sign Up</h3>
      <form class="signup-form form-group mt-3">
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" class="form-control"/>
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" class="form-control"/>
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" class="form-control"/>
        <button type="submit" class="btn btn-secondary mt-2">signup</button>
      </form>
    </div>
  </div>
</div>


<script src="/javascript/login.js"></script>