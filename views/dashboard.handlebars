<div class="row mt-4 post-sidebar">
  <div class="col-md-4 order-md-2 mb-4 d-flex flex-column">
    <h3 class="border-bottom pb-3">Create New Post</h3>
    <form class="new-post-form d-flex flex-column h-100">
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
      <label for="post-content">Content</label>
      <textarea id="post-content" name="post-content" class="h-100 mb-3"></textarea>
      <button type="submit" class="btn btn-secondary">Create</button>
    </form>
  </div>
  <div class="col-md-8 order-md-1">
    <div class="containter">
      <h3 class="border-bottom pb-3 text-center">Your Posts</h3>
      <div class="post-container d-flex flex-wrap mx-auto w-80">
        {{#each posts as |post|}}
        <div>
          <div class="card text-white bg-dark mb-3 post-card" style="width: 18rem;">
            <a href="post/{{post.id}}" target="_blank" class="post-link text-light">
              <div class="card-header">{{post.title}}</div>
              <div class="card-body"> 
                <p class="post-meta">
                  Posted by {{post.user.username}} on {{format_date post.created_at}}
                  |
                  {{post.comments.length}} {{format_plural "comment" post.comments.length}}
                </p>
              </div>
            </a>
            <a href="/dashboard/edit/{{post.id}}" class="w-100">
              <button class="btn btn-secondary w-100">Edit Post</button>
            </a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>


<script src="/javascript/add-post.js"></script>